@model MusiBuy.Common.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="toolbar" id="kt_toolbar">
    <div class="container-fluid d-flex flex-stack flex-wrap flex-sm-nowrap">
        <div class="breadcrumb-header justify-content-between">
            <div class="left-content">
                <h1 class="main-content-title tx-24 mg-b-1 mg-b-lg-1">
                    Change Password
                    <small class="text-muted fs-6 fw-normal ms-1"></small>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <form asp-action="Index" method="post" class="form-horizontal formstyle">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="green-box" id="SuccessMessage" style="display: none;">
            </div>
            <div class="clearfix ptp20">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <div class="form-group">
                            <label>Username </label>
                            <input asp-for="UserName" type="hidden" />
                            <input asp-for="UserId" type="hidden" class="form-control" />
                            <input type="text" value="@Model.UserName" class="form-control" placeholder="User name" disabled />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <div class="form-group">
                            <label asp-for="OldPassword">Old password <span class="text-danger">*</span></label>
                            <input asp-for="OldPassword" type="password" class="form-control" maxlength="20" placeholder="Old password" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <div class="form-group">
                            <label asp-for="Password">New password <span class="text-danger">*</span></label>
                            <input asp-for="Password" type="password" class="form-control" maxlength="20" placeholder="New password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Comfirm new password <span class="text-danger">*</span></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" maxlength="20" onchange="javascript: funCofirmPassword();" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        <button type="submit" class="btn btn-primary" value="Update">
                            Update
                        </button>
                        <a asp-action="home" asp-controller="home" class="btn btn-custom m-1">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="@Url.Content("~/js/custom/reset-password.js")"></script>
}