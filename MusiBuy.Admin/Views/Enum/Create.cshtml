@model MusiBuy.Common.Models.EnumViewModel
@using MusiBuy.Common.Common
@{
    ViewData["Title"] = "Add Enum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="toolbar" id="kt_toolbar">
    <div class="container-fluid d-flex flex-stack flex-wrap flex-sm-nowrap">
        <div class="breadcrumb-header justify-content-between">
            <div class="left-content">
                <h1 class="main-content-title tx-24 mg-b-1 mg-b-lg-1">
                    Add Enum
                    <small class="text-muted fs-6 fw-normal ms-1"></small>
                </h1>
                <partial name="_BreadCrumb" />
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <form class="form" asp-action="Create" enctype="multipart/form-data" method="post" id="frmUpdateEnum">
            <div class="form-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        <div class="form-group">
                            <label asp-for="EnumTypeId">Enum type <span class="text-danger">*</span></label>
                            <select asp-for="EnumTypeId" asp-items="Model.SelectEnumType" class="form-control borderfix dropDown">
                                <option value="">- Select enum type -</option>
                            </select>
                            <span asp-validation-for="EnumTypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        <div class="form-group">
                            <label asp-for="EnumValue">Enum value <span class="text-danger">*</span></label>
                            <input type="text" asp-for="EnumValue" class="form-control" maxlength="50" placeholder="Enum value" />
                            <span asp-validation-for="EnumValue" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        <div class="form-group">
                            <label asp-for="Description">Enum description </label>
                            <input type="text" asp-for="Description" class="form-control" maxlength="50" placeholder="Enum description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        <div class="form-group">
                            <label asp-for="IsActive">Status </label>
                            <div>
                                <label>
                                    <input type="radio" asp-for="IsActive" value="true" /> Active
                                </label>
                                &nbsp;

                                <label>
                                    <input type="radio" asp-for="IsActive" value="false" /> Inactive
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    Save
                </button>
                <a asp-action="Index" class="btn btn-custom m-1">Back</a>
            </div>
        </form>
    </div>
</div>