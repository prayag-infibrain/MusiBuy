@model MusiBuy.Common.Models.EventManagementViewModel
@{
	ViewData["Title"] = "Event Detail";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="toolbar" id="kt_toolbar">
	<div class="container-fluid d-flex flex-stack flex-wrap flex-sm-nowrap">
		<div class="breadcrumb-header justify-content-between">
			<div class="left-content">
				<h1 class="main-content-title tx-24 mg-b-1 mg-b-lg-1">
					Event Detail
					<small class="text-muted fs-6 fw-normal ms-1"></small>
				</h1>
				<partial name="_BreadCrumb" />
			</div>
		</div>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<form class="form-horizontal formstyle">

			<div class="row pt-1">
				<div class="col-sm-12 col-lg-6">
					<div class="row">
						<label for="inputEmail3" class="col-sm-12 col-lg-3">Tital :</label>
						<div class="col-sm-12 col-lg-6">
							@Html.DisplayFor(model => model.Title)
						</div>
					</div>
				</div>
			</div>

			<div class="row pt-1">
				<div class="col-sm-12 col-lg-6">
					<div class="row">
						<label for="inputEmail3" class="col-sm-12 col-lg-3">Description :</label>
						<div class="col-sm-12 col-lg-6">
							@Html.Raw(Model.Description?.Replace("\r\n", "<br />").Replace("\n", "<br />"))
							@* @Html.DisplayFor(model => model.Description) *@
						</div>
					</div>
				</div>
			</div>

			<div class="row pt-1">
				<div class="col-sm-12 col-lg-6">
					<div class="row">
						<label for="inputEmail3" class="col-sm-12 col-lg-3">Host :</label>
						<div class="col-sm-12 col-lg-6">
							@Html.DisplayFor(model => model.CreatorName)
						</div>
					</div>
				</div>
				<div class="col-sm-12 col-lg-6">
					<div class="row">
						<label for="inputEmail3" class="col-sm-12 col-lg-3">Type :</label>
						<div class="col-sm-12 col-lg-6">
							@Html.DisplayFor(model => model.EventTypeName)
						</div>
					</div>
				</div>
			</div>

			<div class="row pt-1">
				<div class="col-sm-12 col-lg-6">
					<div class="row">
						<label for="inputEmail3" class="col-sm-12 col-lg-3">Event At :</label>
						<div class="col-sm-12 col-lg-6">
							@Html.DisplayFor(model => model.EventStartDateTime) TO  @Html.DisplayFor(model => model.EventEndDateTime)
						</div>
					</div>
				</div>
				<div class="col-sm-12 col-lg-6">
					<div class="row">
						<label for="inputEmail3" class="col-sm-12 col-lg-3">Duration :</label>
						<div class="col-sm-12 col-lg-6">
							@Html.DisplayFor(model => model.Duration)
							@* <p id="Duration"></p> *@
						</div>
					</div>
				</div>
			</div>

			<div class="row pt-1">
				<div class="col-sm-12 col-lg-6">
					<div class="row">
						<label for="inputEmail3" class="col-sm-12 col-lg-3">Status :</label>
						<div class="col-sm-12 col-lg-6">
							@Html.DisplayFor(model => model.StatusName)
						</div>
					</div>
				</div>
				@if (!string.IsNullOrEmpty(Model.RecordingURL))
				{
					<div class="col-sm-12 col-lg-6">
						<div class="row">
							<label for="inputEmail3" class="col-sm-12 col-lg-3">Recording URL :</label>
							<div class="col-sm-12 col-lg-6">
								@Html.DisplayFor(model => model.RecordingURL)
							</div>
						</div>
					</div>
				}
			</div>
			
			<div class="row pt-1">
				<div class="col-sm-12 col-lg-6">
					<div class="row">
						<div class="col-sm-12 col-lg-9 col-lg-offset-3">
							<a asp-action="Index" class="formgraybtn mtp5 btn btn-custom">Back</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>