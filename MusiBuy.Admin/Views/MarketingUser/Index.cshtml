@model MusiBuy.Common.Models.MarketingUserViewModel
@using MusiBuy.Admin.Helper
@using MusiBuy.Common.Common
@using Kendo.Mvc.UI
@{
    ViewData["Title"] = "Marketing User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/kendo/js/kendo.js")" type="text/javascript"></script>
<div class="toolbar" id="kt_toolbar">
    <div class="container-fluid d-flex flex-stack flex-wrap flex-sm-nowrap">
        <div class="breadcrumb-header justify-content-between">
            <div class="left-content">
                <h1 class="main-content-title tx-24 mg-b-1 mg-b-lg-1">
                    Marketing User Management
                    <small class="text-muted fs-6 fw-normal ms-1"></small>
                </h1>
                <partial name="_BreadCrumb" />
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="col-md-12">
            <div id="display-message">
                <partial name="_CommonMessages" />
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="card-title mb-0">
                    <div class="d-flex align-items-center position-relative c-searchbar my-1">
                        <span class="svg-icon svg-icon-1 position-absolute ms-6">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="black"></rect>
                                <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="black"></path>
                            </svg>
                        </span>
                        <input type="text" id="txtSearch" placeholder="Search" class="form-control form-control-solid w-250px ps-14 me-4 searchName" maxlength="50" onkeyup="Search()" />
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card-toolbar">
                    <div class="d-flex justify-content-end">
                        @if (CurrentAdminSession.HasAddPermission)
                        {
                            <div class="clearfix ptp5 pbp15">
                                <a asp-action="create" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Add New</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <form asp-action="Delete" method="post" onkeydown="return event.key != 'Enter';" class="form-horizontal formstyle">
        <div class="card-body pt-0">
            <div id="kt_table_users_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="table-responsive">
                    <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_table_users">
                        @(Html.Kendo().Grid<MusiBuy.Common.Models.MarketingUserViewModel>()
                            .Name("grid")
                            .Events(e => e.DataBound("onGridDataBound"))
                            .Columns(columns =>
                            {
                                if (CurrentAdminSession.HasDeletePermission)
                                {
                                    columns.Bound(x => x.Id).ClientTemplate("<div class='form-check form-check-sm form-check-custom form-check-solid'><input type='checkbox' id='chkDelete' name='chkDelete' class='form-check-input singleCheckBox' value='#= Id #' onclick='return initializeSingleCheckBox(this);' /></div>").HtmlAttributes(new { style = "text-align:center" })
                                    .ClientHeaderTemplate("<div class='form-check form-check-sm form-check-custom form-check-solid'><input class='form-check-input' id='allCheckBox' name='allCheckBox' type='checkbox' title='check all records' onclick='return initializeAllCheckBox();' /></div>").HeaderHtmlAttributes(new { @style = "text-align:center;" }).Filterable(false).Groupable(false).Sortable(false).Width("2%");
                                }
                                if (CurrentAdminSession.HasEditPermission)
                                {
                                    columns.Bound(x => x.Id).ClientTemplate("<a href='" + Url.Action("Edit", "MarketingUser", new { id = "#= Id #" }) + "'" + " title='Edit'><span class='fe fe-edit'></span></a>").HtmlAttributes(new { @class = "textalign" }).ClientHeaderTemplate(" ").Filterable(false).Groupable(false).Sortable(false).Width("2%");
                                }
                                if (CurrentAdminSession.HasDetailPermission)
                                {
                                    columns.Bound(u => u.Username).ClientTemplate("<a href='" + Url.Action("Detail", "MarketingUser", new { id = "#= Id #" }) + "'" + "  title = 'Detail' class='text-gray-800 text-hover-primary mb-1'>#= Username #</a>").Width("20%");
                                }
                                else
                                {
                                    columns.Bound(u => u.Username).Title("User name").Width("20%");
                                }
                                columns.Bound(user => user.FirstName).Title("First name").Width("15%");
                                columns.Bound(user => user.LastName).Title("Last name").Width("15%");
                                columns.Bound(user => user.UserTypeValue).Title("User type").Width("20%");
                                columns.Bound(user => user.Active).Title("Status").Width("5%");
                            })
                            .Pageable(pageable => pageable.Refresh(true)
                            .PageSizes(GlobalCode.RecordPerPageList)
                            .ButtonCount(GlobalCode.ButtonCount)
                            .Input(true).Numeric(true))
                            .Groupable(false)
                            .Filterable(f => f.Extra(false))
                            .Sortable()
                            .DataSource(dataSource => dataSource
                            .Ajax()
                            .Read(read => read.Action("_AjaxBinding", "MarketingUser").Data("FilterData"))
                            )
                            .EnableCustomBinding(false)
                            )
                    </table>
                    @if (CurrentAdminSession.HasDeletePermission)
                    {
                        <div class="pbp15 d-flex mt-3">
                            <button class="btn btn-primary" onclick="return Check_CheckBox_Count(this);" type="button"><i class="fa fa-times" aria-hidden="true"></i> Delete</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script src="@Url.Content("~/js/common/jquery.maskedinput.min.js")"></script>
    <script src="@Url.Content("~/js/custom/MarketingUser.js")"></script>
}