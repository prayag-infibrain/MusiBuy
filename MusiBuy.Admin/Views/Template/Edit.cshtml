@model MusiBuy.Common.Models.TemplateViewModel
@using MusiBuy.Common.Common
@{
    ViewData["Title"] = "Edit Email Template";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="toolbar" id="kt_toolbar">
    <div class="container-fluid d-flex flex-stack flex-wrap flex-sm-nowrap">
        <div class="breadcrumb-header justify-content-between">
            <div class="left-content">
                <h1 class="main-content-title tx-24 mg-b-1 mg-b-lg-1">
                    Edit Email Template 
                    <small class="text-muted fs-6 fw-normal ms-1"></small>
                </h1>
                <partial name="_BreadCrumb" />
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body pb-0">
        <form asp-action="Edit" method="post" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
          
            <div class="row">
                <div class="col-sm-12 col-lg-6">
                    <div class="form-group">
                        <label asp-for="TemplateName">Template name</label>
                        <input asp-for="TemplateName" class="form-control disabled" placeholder="Template name" maxlength="50" disabled="disabled" />
                        <input type="hidden" asp-for="TemplateName" />
                    </div>
                </div>
                <div class="col-sm-12 col-lg-6">
                    <div class="form-group">
                        <label asp-for="Subject" class="required">Subject <span class="text-danger">*</span></label>
                        <input asp-for="Subject" class="form-control" placeholder="Subject" maxlength="100" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <div class="form-group">
                        <label asp-for="TemplateContent" class="required">Content</label>
                        <textarea asp-for="TemplateContent" class="form-control" cols="50" rows="10"></textarea>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-12 col-lg-6">
                    <div class="form-group">
                        <label asp-for="IsActive">Status </label>
                        <div>
                            <label>
                                <input type="radio" asp-for="IsActive" value="true" /> Active
                            </label>
                            <label>
                                <input type="radio" asp-for="IsActive" value="false" /> Inactive
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-actions">
                <button name="btnSubmit" type="submit" class="btn btn-primary" id="btnSubmit" value="Update">
                    Update
                </button>
                <a asp-action="Index" class="btn btn-custom m-3">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="@Url.Content("~/js/Common/ckeditor/ckeditor.js")"></script>
    <script src="@Url.Content("~/js/Custom/template.js")"></script>
}