@model MusiBuy.Common.Models.ChangeProfileViewModel
@using MusiBuy.Common.Common
@{
	ViewData["Title"] = "Edit Profile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="toolbar" id="kt_toolbar">
	<div class="container-fluid d-flex flex-stack flex-wrap flex-sm-nowrap">
		<div class="breadcrumb-header justify-content-between">
			<div class="left-content">
				<h1 class="main-content-title tx-24 mg-b-1 mg-b-lg-1">
					Edit Profile
					<small class="text-muted fs-6 fw-normal ms-1"></small>
				</h1>
			</div>
		</div>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<form asp-action="Index" method="post" class="form-horizontal formstyle">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="green-box" id="SuccessMessage" style="display: none;">
			</div>
			<div class="error-message" id="ErrorMessage" style="display: none;">
			</div>
			<div class="clearfix ptp20">
				<div class="row">
					<div class="col-sm-12 col-lg-6">
						<div class="form-group">
							<label asp-for="Username">Username </label>
							<input asp-for="Username" class="form-control" disabled="disabled" placeholder="Username" />
							<input asp-for="UserId" type="hidden" />
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 col-lg-6">
						<div class="form-group">
							<label asp-for="FirstName">First name <span class="text-danger">*</span></label>
							<input asp-for="FirstName" class="form-control" maxlength=50 placeholder="First name" />
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
					</div>
					<div class="col-sm-12 col-lg-6">
						<div class="form-group">
							<label asp-for="Lastname">Last name <span class="text-danger">*</span></label>
							<input asp-for="Lastname" class="form-control" maxlength="50" placeholder="Last name" />
							<span asp-validation-for="Lastname" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-6">
						<div class="form-group">
							<label asp-for="Email">Email <span class="text-danger">*</span></label>
							<input asp-for="Email" class="form-control" maxlength="150" placeholder="Email" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
					</div>
					<div class="col-sm-12 col-lg-6">
						<div class="row">
							<div class="col-sm-12 col-lg-4">
								<div class="form-group">
									<label asp-for="CountryId">Mobile  <span class="text-danger">*</span></label>
									 <select asp-for="CountryId" asp-items="Model.SelectCountry" class="form-control borderfix select2">
                                        <option value="" selected="selected">- Select Code -</option>
                                    </select>
									<span asp-validation-for="CountryId" class="text-danger"></span>
								</div>
							</div>
							<div class="col-sm-12 col-lg-8">
								<div class="form-group">
									@* <label asp-for="Phone">Mobile <span class="text-danger">*</span></label> *@
									<label asp-for="Phone">&nbsp;</label>
									<input asp-for="Phone" class="form-control" maxlength="20" placeholder="Mobile" onkeydown="return isNumberOnlyKey(this,event);" />
									<span asp-validation-for="Phone" class="text-danger"></span>
								</div>
							</div>
							@* <div class="form-group">
						<label asp-for="Phone">Mobile <span class="text-danger">*</span></label>
						<input asp-for="Phone" class="form-control" maxlength="20" placeholder="Mobile" onkeydown="return isNumberOnlyKey(this,event);" />
						<span asp-validation-for="Phone" class="text-danger"></span>
					</div> *@
						</div>
					</div>
					@* <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Phone">Phone <span class="text-danger">*</span></label>
                            <input asp-for="Phone" class="form-control" maxlength="15" placeholder="Phone" onkeydown="return isNumberOnlyKey(this,event);" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div> *@
				</div>
				<div class="row">
					<div class="col-sm-12 col-lg-6">
						<button name="btnSubmit" type="submit" class="btn btn-primary" id="btnSubmit" value="Update">
							Update
						</button>
						<a asp-action="home" asp-controller="home" class="btn btn-custom m-1">Back</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	<script src="@Url.Content("~/js/custom/change-profile.js")"></script>
}