@model MusiBuy.Common.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>MusiBuy | @ViewData["Title"]</title>
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,600,700" />
    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content("~/images/Icon.png")">
    <link href="@Url.Content("~/css/login-bundle.min.css")" rel="stylesheet">
</head>
<body class="error-page1 main-body bg-light text-dark overflow-hidden">
    <div id="global-loader">
        <img src="@Url.Content("~/images/loader.svg")" class="loader-img" alt="Loader">
    </div>
    <div class="page">
        <div class="container-fluid p-0">
            <div class="row no-gutter m-0">
                <div class="col-md-6 col-lg-6 col-xl-7 d-none d-md-flex r-image-container p-0">
                    <div class="r-image-box">
                        <img src="@Url.Content("~/images/new_banner.jpg")" alt="logo">
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-5 bg-white">
                    <div class="login d-flex align-items-center py-2">
                        <div class="container p-0">
                            <div class="row">
                                <div class="col-md-10 col-lg-10 col-xl-9 mx-auto">
                                    <div class="mb-5 d-flex" style="justify-content:center;">
                                        @* <a asp-action="Index" asp-controller="ForgotPassword"> *@
                                            <img src="@Url.Content("~/images/logo.png")" class="sign-favicon-a" alt="logo" width="70%">
                                            <img src="@Url.Content("~/images/Icon.png")" class="sign-favicon-b ht-40" alt="logo">
                                        @* </a> *@
                                    </div>
                                    <div class="main-card-signin d-md-flex bg-white">
                                        <div class="wd-100p">

                                            <div class="main-signin-header">
                                                <h2>Forgot Password!</h2>
                                                <h4>Enter your email, username and mobile to reset your password.</h4>
                                                <div class="error-box" id="messageLogin" style="display: none;">
                                                </div>
                                                <form class="form w-100" autocomplete="off" asp-action="Index" method="post">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <div class="form-group">
                                                        <label>Email <span class="text-danger">*</span></label> <input asp-for="Email" class="form-control" placeholder="Email" maxlength="150" type="text" />
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Username <span class="text-danger">*</span></label> <input asp-for="UserName" class="form-control" placeholder="Username" maxlength="50" type="text" />
                                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Mobile <span class="text-danger">*</span></label>
                                                        <input asp-for="Mobile" class="form-control" placeholder="Mobile" maxlength="15" type="text" onkeydown="return isNumberOnlyKey(this,event);" />
                                                        <span asp-validation-for="Mobile" class="text-danger"></span>
                                                    </div>
                                                    <button class="btn btn-main-primary btn-block" id="kt_sign_in_submit">Send</button>
                                                </form>
                                            </div>
                                            <div class="main-signup-footer mg-t-20">
                                                <p>Forget it, <a asp-action="Index" asp-controller="Home"> Send me back</a> to the sign in screen.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/js/login-bundle.js")"></script>
    <script src="@Url.Content("~/js/user-bundle.js")"></script>
    <script src="@Url.Content("~/js/custom/forgot-password.js")"></script>
</body>
</html>